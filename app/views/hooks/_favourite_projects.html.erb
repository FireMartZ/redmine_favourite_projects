<h3><%= l('favourite_projects.views.index.favourite_projects') %></h3>
<p>
<% favourite = User.current.ordered_favourite_projects.find{|project| project.project_id == @project.id} %>
<% if favourite.nil? %>
  <%= link_to l('favourite_projects.views.index.add_project'), {:controller => 'favourite_projects', :action => 'add_favourite', :id => @project.id}, :method => :post, :class => 'icon icon-fav' %>
<% else %>
  <%= link_to l('favourite_projects.views.index.remove_project'), {:controller => 'favourite_projects', :action => 'remove_favourite', :id => favourite.id}, :method => :post, :class => 'icon icon-fav-off' %>
<% end %>
</p>
